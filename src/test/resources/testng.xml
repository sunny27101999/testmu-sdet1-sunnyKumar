<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--
  testng.xml — TestNG suite configuration for the automation framework.

  Structure:
    Suite: "Automation Suite"
      ├── Test: "API Tests"    (backend package)
      └── Test: "UI Tests"     (frontend package)

  Run all tests:     mvn test
  Run API only:      mvn test -Dgroups=api
  Run smoke only:    mvn test -Dgroups=smoke
-->
<suite name="Automation Suite" verbose="1" parallel="methods" thread-count="2">

  <!-- ============================================================
       Backend / API Tests
       ============================================================ -->
  <test name="API Tests">
    <groups>
      <run>
        <include name="api"/>
        <include name="smoke"/>
        <include name="regression"/>
      </run>
    </groups>
    <packages>
      <package name="tests.backend"/>
    </packages>
  </test>

  <!-- ============================================================
       Frontend / UI Tests
       ============================================================ -->
  <test name="UI Tests">
    <packages>
      <package name="tests.frontend"/>
    </packages>
  </test>

</suite>
